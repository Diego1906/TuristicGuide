<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_place"
        style="@style/ImageViewStyle"
        tools:src="@drawable/ic_add_a_photo" />

    <TextView
        android:id="@+id/text_view_name_place"
        style="@style/TextViewStyle"
        android:layout_marginLeft="@dimen/dimen_default"
        android:layout_marginTop="@dimen/dimen_default"
        android:layout_marginRight="@dimen/dimen_default"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/font_size"
        android:textStyle="bold"
        tools:text="@string/name_local" />

    <TextView
        android:id="@+id/text_view_description_place"
        style="@style/TextViewStyle"
        android:layout_margin="@dimen/dimen_default"
        android:fontFamily="sans-serif-light"
        tools:text="@string/description_local" />

</LinearLayout>